@using SisBro.Controllers
@{
    ViewData["Title"] = "Sis! Bro!";
}

@if (User?.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <div class="text-center">
            <h1 class="display-3 mt-5">Hello, @User.Identity.Name!</h1>
            <div class="display-4 mt-1">
                <span>Send Sis! or Bro! to all users</span>
            </div>
            <hr>
            <div class="d-flex my-1">
                <div class="col-6">
                    <div class="d-flex flex-column">
                        <span class="h5">
                            <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">
                                @HomeController.Record.LastSisMessage
                            </a>
                        </span>
                        <a class="btn btn-outline-success mt-3 py-3" asp-controller="Home" asp-action="SendSis">
                            <span class="display-2">Sis!</span></a>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column">
                        <span class="h5">
                            <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">
                                @HomeController.Record.LastBroMessage
                            </a>
                        </span>
                        <a class="btn btn-outline-success mt-3 py-3" asp-controller="Home" asp-action="SendBro">
                            <span class="display-2">Bro!</span></a>
                    </div>
                </div>
            </div>
            <div class="display-4 mt-5 pt-5">
                <a class="btn btn-outline-danger col-3 text-danger pt-2" asp-controller="Account" asp-action="LogOut">Log out</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-3 mt-5">Welcome to SisBro!</h1><hr>
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column">
                <span class="h5 mb-3" onclick="">Log in to continue</span>
                <a class="btn btn-outline-primary mt-1 p-2" asp-controller="Account" asp-action="FacebookLogin">Facebook</a>
                <a class="btn btn-outline-primary mt-1 p-2" asp-controller="Account" asp-action="GoogleLogin">Google</a>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-5 pt-5">
            <div class="d-flex flex-column">
                <span class="h5">
                    <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">
                        @HomeController.Record.AllBro Bro!
                    </a>
                </span>
                <span class="h5">
                    <a class="text-dark text-decoration-none" asp-controller="Home" asp-action="Index">
                        @HomeController.Record.AllSis Sis!
                    </a>
                </span>
            </div>
        </div>
    </div>
}